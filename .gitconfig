[user]
    name=Sahil Muthoo
    email=sahil.muthoo@gmail.com

[credential]
    helper=osxkeychain

[color]
    ui=auto

[push]
    default=simple

[core]
    editor=vim
    whitespace=trailing-space,space-before-tab
    excludesfile=~/.gitignore_global
    pager="diff-so-fancy | less --tabs=4 -RFX"

[alias]
    ci="commit"
    st="status -sb"
    co=checkout
    l=log --graph --abbrev-commit --date=relative
    ll=log --graph --abbrev-commit --date=relative --name-status
    llo=log --graph --abbrev-commit --date=relative --name-status master..origin/master
    lp=log --graph --abbrev-commit --date=relative -p --word-diff
    lpo=log --graph --abbrev-commit --date=relative -p master..origin/master --word-diff
    lo=log --graph --abbrev-commit --date=relative master..origin/master

[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[diff-so-fancy]
    markEmptyLines = false

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = 227
	  frag = magenta bold
    commit = 227 bold
    old = red bold
    new = green bold
    whitespace = red reverse

[commit]
    verbose=true

[url "persistent-https"]
    insteadof = https

[url "persistent-http"]
	  insteadof = http

[protocol "persistent-https"]
    allow = always

[protocol "persistent-http"]
    allow = always
